{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Statechers Workflow Configuration",
  "type": "object",
  "required": ["name", "entity", "transitions", "states"],
  "properties": {
    "name": {
      "type": "string"
    },
    "entity": {
      "type": "string"
    },
    "transitions": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/transition"
      }
    },
    "states": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/state"
      }
    }
  },
  "$defs": {
    "transition": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "onExist": {
          "type": "array",
          "items": { "type": "string" }
        },
        "onEnter": {
          "type": "array",
          "items": { "type": "string" }
        },
        "form": {
          "$ref": "#/$defs/form"
        },
        "extras": {
          "$ref": "#/$defs/extras"
        }
      },
      "additionalProperties": false
    },
    "extras": {
      "type": "object",
      "additionalProperties": true
    },
    "form": {
      "required": ["processor", "extras"],
      "type": "object",
      "processor": {
        "type": "string"
      },
      "extras": {
        "type": "object"
      }
    },
    "state": {
      "type": "object",
      "required": ["transitions"],
      "properties": {
        "validators": {
          "type": "array",
          "items": { "type": "string" }
        },
        "before": {
          "type": "array",
          "items": { "type": "string" }
        },
        "after": {
          "type": "array",
          "items": { "type": "string" }
        },
        "permissions": {
          "type": "array",
          "items": { "type": "string" }
        },
        "transitions": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    }
  }
}
